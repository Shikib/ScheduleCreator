<div class="container">
  <h1>Listing subjects</h1>

  <table class="striped">
    <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @subjects.each do |subject| %>
        <tr>
          <td><%= link_to subject.department + ' ' + subject.year + ' ' + subject.session , subject %></td>
          <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
          <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br>
</div>
